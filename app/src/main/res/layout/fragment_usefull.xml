<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFD5BB">

    <LinearLayout
        android:paddingTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingTop="30dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="15dp"
            android:textSize="20sp"
            android:text="@string/tilteuseful"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#373535"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/hosp"
            android:justificationMode="inter_word"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <include layout="@layout/list_hosp" />

        <TextView
            android:id="@+id/hospadr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:clickable="true"
            android:paddingTop="5dp"
            android:text="@string/hospaddress"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/hospsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:clickable="true"
            android:paddingTop="5dp"
            android:paddingBottom="20dp"
            android:text="@string/linkhosp"
            android:textSize="12sp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#373535"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/police"
            android:justificationMode="inter_word"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <include layout="@layout/list_pol" />

        <TextView
            android:id="@+id/poladr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:clickable="true"
            android:paddingTop="5dp"
            android:text="@string/poladdress"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/polsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:clickable="true"
            android:paddingTop="5dp"
            android:paddingBottom="20dp"
            android:text="@string/linkpol"
            android:textSize="12sp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#373535"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/coastg"
            android:justificationMode="inter_word"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <include layout="@layout/list_cg" />

        <TextView
            android:id="@+id/cgadr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:clickable="true"
            android:paddingTop="5dp"
            android:text="@string/cgaddress"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/cgsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:clickable="true"
            android:paddingTop="5dp"
            android:paddingBottom="20dp"
            android:text="@string/linkcg"
            android:textSize="12sp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#373535"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/firedep"
            android:justificationMode="inter_word"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <include layout="@layout/list_fd" />

        <TextView
            android:id="@+id/fdadr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:clickable="true"
            android:paddingTop="5dp"
            android:paddingBottom="50dp"
            android:text="@string/fdaddress"
            android:textSize="12sp"
            android:textStyle="italic" />

    </LinearLayout>

</ScrollView>
